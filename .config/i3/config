# Windows key is $mod by default
set $mod Mod4

# Gaps
for_window [class=".*"] border none
gaps outer 1
gaps inner 3

# autostart
exec --no-startup-id /home/storn/scripts/wallpaper.sh &
exec --no-startup-id xsettingsd &
exec --no-startup-id picom -b --config /home/storn/.config/picom/picom.conf &
#exec --no-startup-id home/storn/scripts/polybar.sh &
exec --no-startup-id polybar top &

# Menu
bindsym $mod+d exec rofi -kb-screenshot Control+r -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns

# screenshot
bindsym --release $mod+p exec "import ~/shot_screens/$(date +%s).png"

# volume controls
#bindsym --release XF86AudioMute exec --no-startup-id amixer set Master toggle
