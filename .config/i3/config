# System controls - Lock, Exit, Shutdown
set $mode_system (L)ock|(E)xit|(R)eboot|(S)hutdown

mode "$mode_system" {
	bindsym l exec --no-startup-id /home/storn/scripts/lock.sh, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym r exec reboot, mode "default"
	bindsym s exec shutdown 0, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+q mode "$mode_system"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
